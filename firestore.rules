rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir escritura en la colección waitlist
    match /waitlist/{document} {
      allow write: if true; // Permitir registro de usuarios
      allow read: if false; // No permitir lectura pública
    }
    
    // Reglas para la colección de monedas de usuario
    match /userCoins/{userId} {
      allow write: if true; // Permitir asignación inicial de monedas
      allow read: if false; // No permitir lectura pública
    }
    
    // Reglas por defecto - denegar todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}